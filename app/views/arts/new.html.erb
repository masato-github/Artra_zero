


    <%= form_with model: @art , local: true  do |form| %>

  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, "error") %> :</h2>
  
      <ul>
      <% @art.errors.full_messages.each do |msg| %>
        <li><%= msg %>は入力してください</li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <br>
  

    <div >
      <h1>作品のタイトルを入力してください</h1>
      <%= form.text_field :title, :size => '60'%><br>
    </div>

    <div >
      <h1>作品の紹介文を入力してください</h1>
      <%= form.text_area :description %><br>
    </div>

    <div >
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>

    <div >
      <%= form.submit %>
    </div>

    <% end %>